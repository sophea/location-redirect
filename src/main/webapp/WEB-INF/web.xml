<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <servlet>
        <servlet-name>location-redirect</servlet-name>
        <servlet-class>se.bassac.location.LocationRedirectServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <init-param>
            <param-name>trackingCode</param-name>
            <param-value>UA-12345</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>location-redirect</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
